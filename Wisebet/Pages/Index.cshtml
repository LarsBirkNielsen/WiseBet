@page
@using Wisebet.Authorization
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<head>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@3.7.1/dist/chart.min.js"></script>
</head>

@if (Model.isAnyPendingAttention && User.IsInRole(Constants.PredictionAdminRole))
{
    Response.Redirect("Predictions/PendingToBeUpdated");
}

<main>
    <section class="section-hero">
        <div class="hero">
            <div class="hero-text-box">
                <h1 class="heading-primary">
                    Algoritmic betting predictions, every single week!
                </h1>
                <p class="hero-description">
                    We offer a different way to look at betting, where a computer-model makes the predictions
                    without "feelings" and only based on data. The algorithms are tailored to multiple leagues.
                </p>
                <a href="#cta" class="btn btn--full margin-right-sm">Sign Up</a>

                <a href="#how" class="btn btn--outline">Learn more &darr;</a>
                <div class="covered-leagues">
                    <div class="covered-leagues-imgs">
                        <img src="images/logos/italy.png" alt="italy flag" />
                        <img src="images/logos/england.png" alt="england flag" />
                        <img src="images/logos/spain.png" alt="spain flag" />
                        <img src="images/logos/france.png" alt="france flag" />
                    </div>
                    <p class="covered-leagues-text">
                        <span>20.000+</span> analyzed football matches!
                    </p>
                </div>
            </div>
        </div>
    </section>

    <section class="section-stats">
        <div class="container">
            <h2 class="heading-stats">Stats since we aired</h2>
            <div class="container grid grid--3-cols grid--center-v">
                <div class="stats-box">
                    <h2 class="stats-box-header">Total Predictions:</h2>
                    <p>@Model.TotalPredictionsPlayed</p>
                </div>
                <div class="stats-box">
                    <h2 class="stats-box-header">Wins:</h2>
                    <p>@Model.WinsCount</p>
                </div>
                <div class="stats-box">
                    <h2 class="stats-box-header">Lost:</h2>
                    <p>@Model.LostCount</p>
                </div>
            </div>
        </div>
    </section>



    <section class="section-how" id="how">
        <div class="container">
            <span class="subheading">How it works</span>
            <h2 class="heading-secondary">
                Our prediction model is build by 3 steps
            </h2>
        </div>

        <div class="container grid grid--2-cols grid--center-v">
            <!-- STEP 01 -->
            <div class="step-text-box">
                <p class="step-number">01</p>
                <h3 class="heading-tertiary">
                    Collecting Data
                </h3>
                <p class="step-description">
                    Never again waste time thinking about what to eat! Omnifood AI
                    will create a 100% personalized weekly meal plan just for you. It
                    makes sure you get all the nutrients and vitamins you need, no
                    matter what diet you follow!
                </p>
            </div>

            <div class="step-img-box">
            </div>

            <!-- STEP 02 -->
            <div class="step-img-box">
            </div>
            <div class="step-text-box">
                <p class="step-number">02</p>
                <h3 class="heading-tertiary">Training Data</h3>
                <p class="step-description">
                    Once per week, approve the meal plan generated for you by Omnifood
                    AI. You can change ingredients, swap entire meals, or even add
                    your own recipes.
                </p>
            </div>

            <!-- STEP 03 -->
            <div class="step-text-box">
                <p class="step-number">03</p>
                <h3 class="heading-tertiary">Test Data</h3>
                <p class="step-description">
                    Best chefs in town will cook your selected meal every day, and we
                    will deliver it to your door whenever works best for you. You can
                    change delivery schedule and address daily!
                </p>
            </div>
            <div class="step-img-box">
            </div>
        </div>
    </section>




    <section class="section-leagues" id="meals">
        <div class="container center-text">
            <span class="subheading">Leagues</span>
            <h2 class="heading-secondary">
                Wisebet AI predicts from 5 leagues
            </h2>
        </div>

        <div class="container grid grid--3-cols margin-bottom-md">

            <div class="league">
                <a class="" href="#how">
                    <img src="~/images/logos/premier-league-logo.png"
                         class="league-img"
                         alt="Premier League Logo" />
                    <div class="league-content">
                        <div class="league-tags">
                            <span class="tag tag--country">England</span>
                        </div>
                        <p class="league-title">Premier League</p>
                        <ul class="league-attributes">
                            <li class="league-attribute">
                                <ion-icon class="league-icon" name="bulb-outline"></ion-icon>
                                <span>@Model.PremierLeagueTotalPredictions<strong> Predictions</strong></span>
                            </li>
                            <li class="league-attribute">
                                <ion-icon class="league-icon"
                                          name="trophy-outline"></ion-icon>
                                <span>@Model.PremierLeagueWins <strong>Wins</strong></span>
                            </li>
                            <li class="league-attribute">
                                <ion-icon class="league-icon" name="thumbs-down-outline"></ion-icon>
                                <span>@Model.PremierLeagueLost <strong> Lost</strong></span>
                            </li>
                            <li class="league-attribute">
                                <ion-icon class="league-icon" name="disc-outline"></ion-icon>
                                <span>@Model.PremierLeagueHitRate%<strong> Hit rate</strong></span>
                            </li>
                            <li class="league-attribute">
                                <ion-icon class="league-icon" name="wallet-outline"></ion-icon>
                                <span>@Model.PremierLeagueProfit<strong> DKK Profit</strong></span>
                            </li>
                        </ul>
                    </div>
                </a>
            </div>

